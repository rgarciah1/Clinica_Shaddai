<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/main.xhtml</from-view-id>
        <navigation-case>
                <from-action>#{loginBean.login(actionEvent)}</from-action>
                <from-outcome>1</from-outcome>
                <to-view-id>/principal.xhtml</to-view-id>
                <redirect></redirect>
        </navigation-case>
        <navigation-case>
                <from-action>#{loginBean.login(actionEvent)}</from-action>
                <from-outcome>2</from-outcome>
                <to-view-id>/main.xhtml</to-view-id>
                <redirect></redirect>
        </navigation-case>
    </navigation-rule>    
    <lifecycle>
        <phase-listener>util.AuthorizationListener</phase-listener>
    </lifecycle>
    <managed-bean>
        <managed-bean-name>loginBean</managed-bean-name>
        <managed-bean-class>beans.loginBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>appBean</managed-bean-name>
        <managed-bean-class>beans.appBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
            <managed-bean-name>citaBean</managed-bean-name>
            <managed-bean-class>beans.citaBean</managed-bean-class>
            <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
  <managed-bean>
            <managed-bean-name>seguimientoBean</managed-bean-name>
            <managed-bean-class>beans.seguimientoBean</managed-bean-class>
            <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
</faces-config>